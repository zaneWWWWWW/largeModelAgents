<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.bluecat.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="UserResultMap" type="User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="mbtiType" column="mbti_type"/>
        <result property="grade" column="grade"/>
        <result property="gender" column="gender"/>
        <result property="age" column="age"/>
        <result property="bio" column="bio"/>
        <result property="avatarUrl" column="avatar_url"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, username, password, email, phone, mbti_type, grade, gender, age, bio, avatar_url, created_at, updated_at
    </sql>

    <!-- 根据用户名查找用户 -->
    <select id="findByUsername" resultMap="UserResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM users 
        WHERE username = #{username}
    </select>

    <!-- 根据邮箱查找用户 -->
    <select id="findByEmail" resultMap="UserResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM users 
        WHERE email = #{email}
    </select>

    <!-- 根据手机号查找用户 -->
    <select id="findByPhone" resultMap="UserResultMap">
        SELECT 
        <include refid="Base_Column_List"/>
        FROM users 
        WHERE phone = #{phone}
    </select>

    <!-- 检查用户名是否存在 -->
    <select id="countByUsername" resultType="int">
        SELECT COUNT(1) FROM users WHERE username = #{username}
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="countByEmail" resultType="int">
        SELECT COUNT(1) FROM users WHERE email = #{email}
    </select>

    <!-- 检查手机号是否存在 -->
    <select id="countByPhone" resultType="int">
        SELECT COUNT(1) FROM users WHERE phone = #{phone}
    </select>

    <!-- 更新用户MBTI类型 -->
    <update id="updateMbtiType">
        UPDATE users 
        SET 
            mbti_type = #{mbtiType},
            updated_at = NOW()
        WHERE id = #{userId}
    </update>

</mapper> 